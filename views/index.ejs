<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gym Members</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <h1>Gym Members</h1>
    <div class="container">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Last Payment</th>
                        <th>Next Fee Due</th>
                    </tr>
                </thead>
                <tbody>
                    <% members.forEach(member => { %>
                        <tr>
                            <td><%= member.name %></td>
                            <td><%= member.lastpayment.toDateString() %></td>
                            <td><%= member.due.toDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <a href="/addmember" class="btn">Add New Member</a>
    </div>
</body>
</html>
