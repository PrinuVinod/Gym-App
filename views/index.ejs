<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gym Members</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <h1>Gym Members</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Last Payment</th>
                    <th>Next Fee Due</th>
                </tr>
            </thead>
            <tbody>
                <% members.forEach(member => { %>
                    <tr>
                        <td><%= member.name %></td>
                        <td><%= member.lastpayment ? new Date(member.lastpayment).toDateString() : 'N/A' %></td>
                        <td><%= member.due ? new Date(member.due).toDateString() : 'N/A' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
